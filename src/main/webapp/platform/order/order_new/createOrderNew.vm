<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=gbk" />
		#CSSM(["easyui","style"])
		#JSM(["jquery", "easyui","upload"])
		#JS_ENV_VAL()
	</head>
		<body class="easyui-layout">	
	<form  method="post" target="hideFrame" enctype="multipart/form-data"> 
           <div id="p_add" region="center" class="easyui-panel"
			title="订单信息" 
			data-options="iconCls:'icon-edit'">
          
						<table id="table_01" width="100%" cellspacing="0" border="0">
									 <tr>
                                            <td class="head" nowrap>
												下单人：
											</td>
											<td>
												<input type="text"  id="userName" name="userName" value="$!{order.userName}" class="easyui-validatebox"
								  readonly="true">
											</td>
										    <td class="head" nowrap>
												经销商：
											</td>
											<td><input id="kunnrId" name="kunnrId" data-options="editable:false"></td>
					                           <div id="toolbarKonzs" class="datagrid-toolbar">
					                           <input class="easyui-searchbox" searcher="searcherKonzs" prompt="请输入经销商名称查询" style="width:300px"></input>		
				                               </div>
                                            <td class="head" nowrap>
												经销商编号：
											</td>
											<td >
											    <input type="text"  id="kunnr" value="$!{order.kunnr}" class="easyui-validatebox"
								  readonly="true">
												<input type="hidden"  id="orgName" value="$!{order.orgName}">
								                <input type="hidden" id="orgId" value="$!{order.orgId}">
											</td>
										</tr>
										<tr>
										    <td class="head" nowrap>联系人：</td>
										    <td><input type="text"  id="name2" name="name2" value="$!{order.name2}" class="easyui-validatebox"
								  readonly="true"></td>
								            <td class="head" nowrap>联系电话：</td>
										    <td><input type="text"  id="mobile" name="mobile" value="$!{order.mobile}" class="easyui-validatebox"
								  readonly="true"></td>
								            <td class="head" nowrap>可进入车型：</td>
										    <td><input type="text"  id="carType" name="carType" value="$!{order.carType}" class="easyui-validatebox"
								  readonly="true"></td>
										</tr>
										<tr>
										<td class="head" nowrap>
												送货地址：
											</td>
											<td colspan="6">
												<textarea maxlength="80" cols="80" rows="1"  id="address"   name="address" class="easyui-validatebox"
								  style="resize:none;" readonly>$!{order.address}</textarea>
											</td>
                                         </tr>
                                         <tr>
                                         <td class="head" nowrap>
												订单描述：
											</td>
											<td colspan="6">
												<textarea maxlength="160" cols="80" rows="2"  id="orderDesc"   name="orderDesc" class="easyui-validatebox"
								  style="resize:none;"></textarea>
											</td>
                                         </tr>
						      </table>
						<div class="easyui-panel" title="订单明细" data-options="collapsible:true,iconCls:'icon-list'" style="padding: 2px; background: #fafafa;">
						      <table id="detailList" width="100%" border="0">
			                     <tr>
			                          <td><a href="javascript:addDetail()">
			                                                                                 添加明细</a></td>
			                      </tr>
			                  </table>
                       </div>
                                  <table border="0" height="170">
                                      <tr>
                                        <td>&nbsp;</td>
                                      </tr>
                                  </table>
		                          <div region="south" border="false" style="text-align:center;height:30px;line-height:30px;">
				                      <a class="easyui-linkbutton" icon="icon-ok" href="javascript:createOrder()">提交</a>
				                      <a class="easyui-linkbutton" icon="icon-cancel" href="javascript:cencel()">取消</a>
		                          </div>
                               
            </div>
	
		 </form>
           <iframe id="hideFrame" name="hideFrame"  style="height: 0; width: 0"></iframe>
           <div id="maintWindow"/>
           	</body>
         <script type="text/javascript" src="$!{env.imgUrl}/js/platform/order/order_new/createOrderNew.js"></script>
</html>